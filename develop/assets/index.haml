  %script(id="offer-popup" type="text/x-handlebars-template")

    .offer-popup(data-id="{{id}}")
      {{#with offer}}
        .offer-popup-header
          .foto-user
            %img(src="{{authorFoto}}")
          .info
            %p.name {{author}}
            %p.status нуждается в этом
          %a.btn.active(href="#") Добавить в друзья
      {{/with}}
      {{#with offerPopup}}
        .offer-popup-descr
          .descr
            .name-service {{../nameService}}
            .category {{../categoryService}}
            .foto-service
              {{#with serviceImg}}
                %img(src="{{address}}")
                %a.status(href="#") Реализовано
              {{/with}}
            .text
              {{{description}}}
          %ul.descr-btns
            %li
              %a.btn(href="#") Добавить к себе
            %li
              %a.btn(href="#") Мне нравится
            %li
              %a.btn(href="#") Комментировать
      {{/with}}
      {{#with offer}}
        .offer-popup-rewiews
          %ul.rewiews
            {{#each rewiews}}
              {{#if show}}
                %li
                  .foto
                    %img(src="{{fotoAuth}}")
                  .text
                    {{{text}}}
              {{/if}}
            {{/each}}
          .add-rewiews
            .foto
              %img(src="img/user2.jpg")
            %form.form(action="#" method="")
              %textarea.textspace.js-write(placeholder="Комментировать" data-write="rewiew")
        .offer-popup-likes
          %ul.likes-list
            %li.item
              %p.header {{adding.length}} добавили к себе
                %ul.users
                  {{#each adding}}
                    %li
                      .foto
                        %img(src="{{foto}}")
                  {{/each}}
            %li.item
              %p.header {{likes.length}} нравится
              %ul.users
                %li
                  {{#each likes}}
                    %li
                      .foto
                        %img(src="{{foto}}")
                  {{/each}}
      %a.popup-close.js-popup-close(href="#") Закрыть
      {{/with}}
      
  %script(id="offer" type="text/x-handlebars-template")
    {{#with data}}  
      {{#each this}}
        {{#with offer}}
          {{#if show}}
            %div.item.js-grid-item(data-id="{{../id}}")
              .item-img
                %img(src="{{previewImg}}")
              .item-info
                %p.info-header
                  {{nameService}}
                %ul.info-descr
                  %li {{categoryService}}
                  %li {{deadline}}
                  %li {{place}}
                %ul.info-comment
                  {{#if likes.length}}
                    %li 
                      {{likes.length}} нравится
                  {{/if}} 

                  {{#if adding.length}}
                    %li 
                      {{adding.length}} добавили себе
                  {{/if}}

                  {{#if commentsCount}}
                    %li 
                      {{commentsCount}} комментариев
                  {{/if}}  

                  {{#if rewiewsCount}}
                    %li 
                      {{rewiewsCount}} отзывов
                  {{/if}} 
              .item-author
                .foto
                  %img(src="{{authorFoto}}")
                .info
                  %p.info-name 
                    {{author}}
                  %p.info-offer
                    предлагает
              
              .comments-block.js-comments(class="{{#if showComments}}active-comments{{/if}}")
                %ul.item-comments
                  {{#sortList comments 5}}
                    {{#each this}}
                      {{#if show}}
                        %li.js-comment(data-id="{{id}}")
                          .foto
                            %img(src="{{foto}}")
                          %p.text
                            {{{text}}}
                          %a.js-delete-comment.delete-offer(href="#")
                      {{/if}}
                    {{/each}}
                  {{/sortList}}
                .item-write-comment
                  .foto
                    %img(src="img/iam.jpg")
                  %form(action="#" method="")
                    %textarea.field.js-write(placeholder="Комментировать" data-write="comment")                

              .item-offer-btn
                %a.meet-offer.js-call-popup(href="#") Ознакомиться с предложением
                %ul.offer-btns
                  %li.item-btn
                    %a.link-btn.delete.js-delete-offer(href="#" data-btn="delete")
                  %li.item-btn
                    %a.link-btn.like.js-add-prop(href="#" data-btn="likes" class="{{#if showLikes}} active-btn {{/if}}")
                  %li.item-btn
                    %a.link-btn.add.js-add-prop(href="#" data-btn="adding" class="{{#if showAdding}}active-btn{{/if}}")
                  %li.item-btn
                    %a.link-btn.comment.js-show-comments(href="#" data-btn="comment" class="{{#if showComments}}active-btn{{/if}}")
          {{/if}}
        {{/with}}
      {{/each}}
    {{/with}}

  %script(src="js/main.js")              




